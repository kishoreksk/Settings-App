<%= turbo_frame_tag dom_id setting do %>
<%= form_with(model: setting, class: "contents") do |form| %>
  <% if setting.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
        <% setting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="text-2xl text-blue-800"><%= setting.name.camelize %> settings</div>
    <% JSON.parse(setting.settings.gsub("=>", ":")).each do |key, value| %>
    <div class="my-5">
      <%= form.label key %>
      <input id="setting_settings_<%= key %>" name="setting[settings[<%= key %>]]" value="<%= value %>" class="block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full">
    </div>
  <% end %>
  <div class="inline">
    <%= form.submit value: "Save", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
<% end %>